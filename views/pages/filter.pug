extends ../index

block variables
  - var template = template;

block content
  .filter
    .filter__wrapper
      section.filter__section
        .filter__section__row
          .filter__name__wrapper
            h1.filter__name= filterPage.definition
            p.filter__description= filterPage.definition
          .filter__description_wrapper
            h2.filter__description__title= filterPage.description
            p.filter__description= page.description

      section.filter__section
        .filter__section__row__gallery
          h1.filter__name= filterPage.dataset
          .filter__gallery__wrapper
            .filter__gallery__preview
              .filter__preview__wrapper
                img.filter__preview__media(
                  src='img/600x800/' + template + '/' + template + '-' + randomImages[0].local_image_id + '.webp'
                )
                .filter__gallery__comment__wrapper
                  .filter__gallery__comment
                    .filter__comment__header
                      p.filter__total__spend= filterPage.bill + ': '
                        span= randomImages[0].local_image_id
                        | â‚¬
                      img.filter__flag(
                        src='flags/' + randomImages[0].comment_data.country + '.svg'
                      )
                      p.filter__date= moment(randomImages[0].comment_data.comment_time).format('DD.MM.YYYY')
                    p.filter__comment__content= randomImages[0].comment_data.content
            .filter__gallery
              each media in randomImages
                .gallery__image__wrapper
                  img.gallery__image__media(
                    src='img/200x200/' + template + '/' + template + '-' + media.local_image_id + '.webp',
                    loading='lazy'
                  )
                  .filter__overlay(
                    data-image=template + '/' + template + '-' + media.local_image_id + '.webp',
                    data-review=media.comment_data.content,
                    data-date=moment(media.comment_data.comment_time).format('DD.MM.YYYY'),
                    data-country=media.comment_data.country,
                    data-spend=media.local_image_id
                  )
                    span= media.local_image_id

      section.filter__section
        .filter__section__row
          .filter__demographic__wrapper
            h1.filter__name= filterPage.demography
            .filter__demographic
              .demographic__item
                h2.demographic__name= filterPage.countryChart
                .chart__wrapper
                  canvas#country__chart.chart(chart-data=chart.country)
              .demographic__item
                h2.demographic__name= filterPage.deviceChart
                .chart__wrapper
                  canvas#device__chart.chart(chart-data=chart.device)
            .demographic__description
              p= filterPage.chartDescription
