extends ../index

block variables
  -  var template = template

block content
  .filter
    .filter__wrapper

      section.filter__section
        .filter__section__row
          .filter__name__wrapper
            h1.filter__name Definition
            p.filter__description= filter.definition
          .filter__description_wrapper
            h2.filter__description__title= filter.descriptionTitle
            p.filter__description= filter.description

      section.filter__section
        .filter__section__row__gallery
          h1.filter__name Dataset
          .filter__gallery__wrapper
            .filter__gallery__preview
              .filter__preview__wrapper
                  img.filter__preview__media(src='img/600x800/' + template + '/' + template + '-' + randomImages[0].local_image_id + '.jpg')
                  .filter__gallery__comment__wrapper
                    .filter__gallery__comment
                      p= randomImages[0].comment_data.content
                      .filter__comment__footer
                        p.filter__total__spend= filterPage.bill + ': '
                          span=randomImages[0].local_image_id
                          | â‚¬
                        img.filter__flag(src='flags/' + randomImages[0].comment_data.country + '.svg')
                        p.filter__date= moment(randomImages[0].comment_data.comment_time).format("DD.MM.YYYY")
            .filter__gallery
              each media in randomImages
                .gallery__image__wrapper
                  img.gallery__image__media(src='img/200x200/' + template + '/' + template + '-' + media.local_image_id + '.jpg', loading='lazy')
                  .filter__overlay(data-image=template + '/' + template + '-' + media.local_image_id + '.jpg' data-review=media.comment_data.content data-date=moment(media.comment_data.comment_time).format("DD.MM.YYYY") data-country=media.comment_data.country data-spend=media.local_image_id)
                    span= media.local_image_id





      section.filter__section
        .filter__section__row
          .filter__name__wrapper
            h1.filter__name= filter.title
            p.filter__description= filter.definition
          .filter__description_wrapper
            h2.filter__description__title= filter.descriptionTitle
            p.filter__description= filter.description

